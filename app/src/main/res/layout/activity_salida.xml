<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorFondo"
    tools:context=".Salida">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/fotoHijoSalida"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="50dp"
            android:layout_marginLeft="90dp"
            android:layout_marginRight="90dp"
            android:layout_weight="1"
            android:paddingBottom="50dp"
            android:paddingTop="50dp"
            app:srcCompat="@drawable/wasi5_login" />

        <Button
            android:id="@+id/botonSalida"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="90dp"
            android:layout_marginRight="90dp"
            android:background="@color/colorBotonSalida"
            android:drawableLeft="@drawable/permitir_salida"
            android:text="Permitir Salida"
            android:textAllCaps="false"
            android:textSize="16sp" />

        <Button
            android:id="@+id/botonPermitirMovilidad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="90dp"
            android:layout_marginRight="90dp"
            android:background="@color/colorBotonMovilidad"
            android:drawableLeft="@drawable/perfil_movilidad"
            android:text="Permitir Movilidad"
            android:textAllCaps="false"
            android:textSize="16sp" />

    </LinearLayout>

</RelativeLayout>